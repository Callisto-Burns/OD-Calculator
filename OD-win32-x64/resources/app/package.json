{
  "name": "od-calculator",
  "version": "1.0.0",
  "description": "A super tricked out calculator built to solve a super simple geometry problem",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-osx": "electron-packager . OD --electron-version 7.1.1 --platform darwin --icon ./src/img/logo-symbol.icns --out ./dist --overwrite",
    "build-win": "electron-packager . OD --electron-version 7.1.1 --platform win32 --icon ./src/img/logo-symbol.ico ./dist --overwrite"
  },
  "build": {
    "appId": "OD Calculator",
    "category": "Productivity",
    "win": {
      "target": "NSIS",
      "icon": "src/img/logo-symbol.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Callisto-Burns/OD-Calculator.git"
  },
  "author": "Jackson Burns",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Callisto-Burns/OD-Calculator/issues"
  },
  "homepage": "https://github.com/Callisto-Burns/OD-Calculator#readme",
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^22.6.0"
  }
}
